<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".userSettingsActivity">

    <Switch
        android:padding="20dp"
        android:id="@+id/covPosSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:switchMinWidth="56dp"
        android:text="Covid Positive"
        android:textSize="20dp"
        android:checked="false"
        android:textStyle="bold"
        android:textOff="No"
        android:textOn="Yes"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp">

        <TextView
            android:id="@+id/textEmailAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email Address"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextEmailAddress"
            android:layout_width="320dp"
            android:layout_height="30dp"
            android:layout_alignTop="@id/textEmailAddress"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_edittext"
            android:enabled="false"
            android:inputType="none" />

        <TextView
            android:id="@+id/textLastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/textEmailAddress"
            android:layout_alignTop="@id/editTextEmailAddress"
            android:layout_marginTop="35dp"
            android:text="Last Name"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextLastName"
            android:layout_width="320dp"
            android:layout_height="30dp"
            android:layout_alignTop="@id/textLastName"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_edittext"
            android:inputType="none"
            android:enabled="false"/>

        <TextView
            android:id="@+id/textFirstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/editTextLastName"
            android:layout_marginTop="35dp"
            android:text="First Name"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextFirstName"
            android:layout_width="320dp"
            android:layout_height="30dp"
            android:layout_alignTop="@id/textFirstName"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_edittext"
            android:inputType="none"
            android:enabled="false"/>

        <TextView
            android:id="@+id/textGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/editTextFirstName"
            android:layout_marginTop="35dp"
            android:text="Gender"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextGender"
            android:layout_width="320dp"
            android:layout_height="30dp"
            android:layout_alignTop="@id/textGender"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_edittext"
            android:inputType="none"
            android:enabled="false"/>

        <TextView
            android:id="@+id/textAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/editTextGender"
            android:layout_marginTop="35dp"
            android:text="Address"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextAddress"
            android:layout_width="320dp"
            android:layout_height="30dp"
            android:layout_alignTop="@id/textAddress"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_edittext"
            android:inputType="none"
            android:enabled="false"/>

        <TextView
            android:id="@+id/textCompany"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/editTextAddress"
            android:layout_marginTop="35dp"
            android:text="Company"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextCompany"
            android:layout_width="320dp"
            android:layout_height="30dp"
            android:layout_alignTop="@id/textCompany"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_edittext"
            android:inputType="none"
            android:enabled="false"/>

        <TextView
            android:id="@+id/textEmployment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/editTextCompany"
            android:layout_marginTop="35dp"
            android:text="Employment"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextEmployment"
            android:layout_width="320dp"
            android:layout_height="30dp"
            android:layout_alignTop="@id/textEmployment"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_edittext"
            android:inputType="none"
            android:enabled="false"/>

    </RelativeLayout>

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="100dp"
        android:padding="10dp"
        android:text="LOGOUT"
        android:textSize="20dp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:alpha=".5"
        android:background="@drawable/rectangle_top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:gravity="center">

        <ImageView
            android:id="@+id/btnMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/rectanglebutton"
            android:clickable="true"
            android:padding="10dp"
            android:src="@drawable/map" />

        <ImageView
            android:id="@+id/btnTarget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/rectanglebutton"
            android:clickable="true"
            android:padding="10dp"
            android:src="@drawable/target" />

        <ImageView
            android:id="@+id/btnStat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/rectanglebutton"
            android:clickable="true"
            android:padding="10dp"
            android:src="@drawable/stat" />

        <ImageView
            android:id="@+id/btnSetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:alpha=".5"
            android:background="@drawable/rectanglebutton"
            android:clickable="true"
            android:padding="10dp"
            android:src="@drawable/setting" />

    </LinearLayout>

</RelativeLayout>